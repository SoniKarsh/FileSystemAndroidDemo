<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/activity_main"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="10dp"
	tools:context="com.karshsoni.filesystemdemo.displayscreens.storageoptions.CacheStorageDemo">

	<EditText
		android:id="@+id/etInternalCacheData"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="Your Data"/>

	<Button
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:onClick="saveToInternalCache"
		android:text="Save Data to Internal Cache"/>

	<Button
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:onClick="loadFromInternalCache"
		android:text="Load From Internal Cache"/>

	<TextView
		android:id="@+id/txvInternalCacheContent"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="18sp"
		android:textColor="@android:color/black"
		android:text="file content"
		android:layout_marginLeft="10dp"/>

	<EditText
		android:id="@+id/etExternalCacheData"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="Your Data"
		android:layout_marginTop="50dp"/>

	<Button
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:onClick="saveToExternalCache"
		android:text="Save Data to External Cache"/>

	<Button
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:onClick="loadFromExternalCache"
		android:text="Load From External Cache"/>

	<TextView
		android:id="@+id/txvExternalCacheContent"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="18sp"
		android:textColor="@android:color/black"
		android:text="file content"
		android:layout_marginLeft="10dp"/>

</LinearLayout>
